<p id="notice"><%= notice %></p>

<h1>Listing Post Codes</h1>

<table>
  <thead>
    <tr>
      <th>Code</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @post_codes.each do |post_code| %>
      <tr>
        <td><%= post_code.code %></td>
        <td><%= link_to 'Show', post_code %></td>
        <td><%= link_to 'Edit', edit_post_code_path(post_code) %></td>
        <td><%= link_to 'Destroy', post_code, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post code', new_post_code_path %>
